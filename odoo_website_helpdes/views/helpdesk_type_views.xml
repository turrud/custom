<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Type list view-->
    <record id="helpdesk_type_view_list" model="ir.ui.view">
        <field name="name">helpdesk.type.view.list</field>
        <field name="model">helpdesk.type</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>
    <!--    Action for  helpdesk type model.-->
    <record id="action_helpdesk_type" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">helpdesk.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>
</odoo>
